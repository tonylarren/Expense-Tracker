@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@model ExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["DeleteConfirmation"]</h3>
<div>
    <h4>@SharedLocalizer["Category"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @SharedLocalizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@SharedLocalizer["Back"]</a>
    </form>
</div>
